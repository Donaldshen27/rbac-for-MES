{
  "name": "rbac-system",
  "version": "1.0.0",
  "description": "A generic Role-Based Access Control (RBAC) system designed for Manufacturing Execution Systems (MES) but suitable for any application requiring sophisticated permission management.",
  "main": "dist/app.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:init": "ts-node scripts/init-db.ts",
    "db:test": "ts-node scripts/test-connection.ts",
    "db:setup": "ts-node scripts/setup-database.ts",
    "migrate:up": "ts-node scripts/run-migrations.ts up",
    "migrate:down": "ts-node scripts/run-migrations.ts down",
    "migrate:reset": "ts-node scripts/run-migrations.ts reset",
    "migrate:status": "ts-node scripts/run-migrations.ts status",
    "seed:up": "ts-node scripts/run-seeders.ts up",
    "seed:down": "ts-node scripts/run-seeders.ts down",
    "seed:reset": "ts-node scripts/run-seeders.ts reset",
    "seed:status": "ts-node scripts/run-seeders.ts status",
    "db:reset": "npm run migrate:reset && npm run migrate:up && npm run seed:up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Donaldshen27/rbac-for-MES.git"
  },
  "keywords": [
    "rbac",
    "permission",
    "role",
    "authentication",
    "mes",
    "authorization"
  ],
  "author": "RBAC System Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Donaldshen27/rbac-for-MES/issues"
  },
  "homepage": "https://github.com/Donaldshen27/rbac-for-MES#readme",
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.1",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "umzug": "^3.8.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.0",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
